<%= render 'navbar' %>

<div class="container p-5 mt-5" style="width: 46%;"> 
   <h1 class="my-5"> create new bookmark </h1>

   <%= form_tag("/links", :method => "post") do %>

       <div class="mb-3">
          <%= label_tag(:group_name, "Group Name:",class: "form-label") %>
          <%= text_field_tag(:group_name, params[:group_name] , value: @str , :required => true, class: "form-control"  )%>
       </div>

       <div class="mb-3">
          <%= label_tag(:url, "URL:", class: "form-label") %>
          <%= url_field_tag(:url,params[:url], :required => true, class: "form-control" ) %>
       </div>

        <div class="mb-3">
          <%= label_tag(:tag_list, "Tags:", class: "form-label") %>
          <%= text_field_tag(:tag_list, params[:tag_list], :required => true, class: "form-control" ) %>
        </div>

        <%= submit_tag("submit", class: "btn btn-default btn-primary") %>
   <% end %>

        
</div> 

